<div class="container">
  <div class="d-flex justify-content-end">
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger mx-2" %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-primary mx-2" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  <h1 class="text-white">Public Recipes</h1>
  <% @recipes.each do |recipe| %>
    <hr class="my-4">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.name %></h5>
        <p class="card-text">By: <span><%= recipe.author.name.split(" ").second %></span></p>
        <p class="card-text">Total food items: <span><%= recipe.foods.count %></span></p>
        <p class="card-text">Total price: <span><%= number_to_currency(recipe.calculate_total_price(recipe)) %></span></p>
        <%= link_to "View Recipe", recip_path(recipe), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

