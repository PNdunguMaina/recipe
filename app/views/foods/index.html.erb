<p style="color: green"><%= notice %></p>

<h1>Foods</h1>
<%= link_to "Add", new_food_path %>
<div id="foods">
  <% @foods.each do |food| %>
  <hr />
   <%= link_to "Delete", food, data: { turbo_method: :delete } %>
    <p>
      <strong>Name: </strong><%= food.name%>
    </p>
    <p>
      <strong>Measurement Unit: </strong><%= food.measurement_unit%>
    </p>
    <span>
      <strong>Price: </strong>$<%= food.price%>
    </span>
    <hr />
  <% end %>
</div>


