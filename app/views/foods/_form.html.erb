<%= form_with(model: food, class: "form-horizontal") do |form| %>
  <% if food.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :measurement_unit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :measurement_unit, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.number_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :quantity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :quantity, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
